category:            Reactivity, FRP, Network
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:   Data.MonadicStreamFunction.Extra
                     FRP.BearRiver.Extra
                     Network.Client
                     Network.Common
                     Network.Server

  other-modules:     Network.Internal.ServerCommon
  ghc-options:         -Wall
  -- other-extensions:
  build-depends:       base,
                       bearriver,
                       binary,
                       bytestring,
                       containers,
                       distributed-process,
                       distributed-process-async,
                       distributed-process-client-server,
                       distributed-process-extras,
                       dunai,
                       exceptions,
                       mtl,
                       network >= 3.0,
                       network-transport,
                       network-transport-tcp,
                       stm >= 2.4.5
  hs-source-dirs:      src
  default-language:    Haskell2010

library examples-common
  exposed-modules:     Collision, Config, Display, Input, Time, Types
  hs-source-dirs:      examples-common
  default-language:    Haskell2010
  default-extensions:  Arrows
  ghc-options:         -Wall
  build-depends:       base,
                       bearriver,
                       optparse-applicative,
                       sdl2,
                       sdl2-gfx,
                       text

